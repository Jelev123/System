@using SystemTask.Data.Models.ViewModel
@using System.Text
@model AllListViewModel

        <table class="table  table-dark">


<div class="row">

    @foreach (var items in Model.Tehnicals)
    {
            <thead>
                <tr>
                    <th scope="col"></th>
                    <th style="color : white" scope="col">Name</th>
                    <th style="color : white" scope="col">Description</th>
                    <th style="color : white" scope="col">Blocks</th>
                    <th style="color : white" scope="col">Systems</th>
                    <th style="color : white" scope="col">Creating Date</th>
                    <th style="color : white" scope="col">Responsible Person</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row"></th>
                    <td>@items.Name</td>
                    <td>@items.Description</td>

                    <td>
                        @foreach (var item in Model.TehnicalBlocks)
                        {
                            <h5>@item.BlockName @item.Code</h5>

                        }
                    </td>

                    <td>
                        @foreach (var item in Model.TehnicalSystems)
                        {
                            <h5>@item.SystemName @item.Code</h5>


                        }
                    </td>

                    <td>@items.DateAndTimeCreated</td>

                    <td>
                    @foreach (var item in Model.TehnicalEmployees)
                    {
                        <h3>@item.Activity @item.FirstName @item.SurName @item.LastName</h3>

                    }
                    </td>

                    



                </tr>
            </tbody>
    }

        </table>


</div>